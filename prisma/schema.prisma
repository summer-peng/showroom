// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String  @unique
  password  String?
  userId    Int?    @unique
}

model resumes {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      Int
  email       String
  phoneNumber String
  title       String?
  summary     Json?
  remark      String?
  firstName   String?
  lastName    String?
  city        String?
  province    String?
  postalCode  String?
  skills      String[]
  experience  Json?
  education   Json?
  createDate  DateTime @default(now())
  updateDate  DateTime @updatedAt
}
